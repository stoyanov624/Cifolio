<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="4_create_user_table" author="Ivaylo Stoyanov">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"  primaryKeyName="user_id_pk" />
            </column>

            <column name="username" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="password" type="varchar(64)">
                <constraints unique="true" nullable="false"/>
            </column>

            <column name="email" type="varchar(250)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="users_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_user_id"
                                 baseTableName="users_roles" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_role_id"
                                 baseTableName="users_roles" baseColumnNames="role_id"
                                 referencedTableName="roles" referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>
