<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="5_create_travel_guides_cities_relation_table" author="Ivaylo Stoyanov">
        <createTable tableName="guides_cities">
            <column name="guide_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_travel_guide"
                                 baseTableName="guides_cities" baseColumnNames="guide_id"
                                 referencedTableName="travel_guides" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="fk_city"
                                 baseTableName="guides_cities" baseColumnNames="city_id"
                                 referencedTableName="cities" referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>